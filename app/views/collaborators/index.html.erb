<div class="collaborator-heading">
     <h1>Add or Remove User as Collaborator</h1>
 </div>
 <div class="container">
     <table class="table table-striped">
        <% @users.each do |user| %>
             <tr>
                 <td><h5><%= user.email %></h5></td>
                 <% if @wiki.users.include?(user) %>
                     <td>
                         <% collaborator = @wiki.collaborator_for(user) %>
                         <%= link_to "Remove Collaborator", wiki_collaborator_path(@wiki, collaborator), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to remove this collaborator?'} %>
                     </td>
                 <% else %>
                     <td><%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-success' %></td>
                 <% end %>
             </tr>
         <% end %>
     </table>
 </div>
