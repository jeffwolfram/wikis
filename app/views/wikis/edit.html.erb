<h1>Edit Wiki</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for adding wikis:</P>
      <ul>
        <li>Don't be a dick!</li>
        <li>Do not post fake shit!</li>
        <li>Use footnote when quoting sources</li>
        <li>Be cool to others</li>
        <li>Don't be a troll</li>
      </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private
        <% end %>
        </div>
        <%= f.submit "Update", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>

    <% if current_user && ((current_user.premium? || current_user.admin?) && current_user == @wiki.user) %>
      <%= form_tag [@wiki, Collaborator.new] do |f| %>
        <%= email_field_tag :email %>
        <%= submit_tag 'Save' %>
      <% end %>
    <% end %>

    <% @wiki.collaborators.each do |collaborator| %>
      <%= collaborator.user.email %>
      <%= link_to "Remove", wiki_collaborator_path(collaborator), method: :delete, class: "btn btn-success" %>
    <% end %>
