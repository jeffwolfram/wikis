<br>
<h1 class="text-center">Blocipedia: Social, Markdown Wikis</h1>
<div class="jumbotron">

  <div class="text-center">

  </div>

  <% unless user_signed_in? %>
  <div class="text-center">
    <h2>Create and share Markdown Wikis</h2>

    <% end %>
  </div>
</div>
<div class="row">

  <div class="col-md-6 text-center">
    <p>Create Private Wikis!</p>
    <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
      <% end %>
      <label class="amount">
        <span>Amount: $15.00</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="A month's subscription"
    data-amount="500"
    data-locale="auto"></script>

  </div>
  <% end %>
  <div class="col-md-6 text-center">
    <p>Create as many public wikis as you want</p>
    <strong><p>FREE</p></strong>
    <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary' %>
  </div>
</div>
